<div class="row featurette">
  <div class="col-md-7">
    <h2 class="featurette-heading"><%= nearby_deal.full_title %></h2>
    <p class="lead"><%= truncate nearby_deal.description, length: 200 %></p>
    <p><a class="btn btn-default" href="<%= deal_path(nearby_deal.id) %>" role="button">View details &raquo;</a></p>
  </div>
  <div class="col-md-5">
    <img class="featurette-image img-responsive" style="width:400px" src="<%= nearby_deal.image_url %>" alt="Generic placeholder image">
  </div>
</div>

<hr class="featurette-divider">
